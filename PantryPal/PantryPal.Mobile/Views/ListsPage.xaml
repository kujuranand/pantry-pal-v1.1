<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="PantryPal.Mobile.Views.ListsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    x:Name="ListsPageRoot"
    Title="My Lists"
    BackgroundColor="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource OffBlack}}">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="New" Clicked="OnNewList" />
        <ToolbarItem Text="Seed" Clicked="OnSeedClicked" />
    </ContentPage.ToolbarItems>

    <Grid RowDefinitions="Auto,*,Auto" Padding="12" RowSpacing="12">

        <VerticalStackLayout Grid.Row="0" Spacing="8">
            <SearchBar x:Name="SearchBar"
                       Placeholder="Search lists..."
                       TextChanged="OnSearchChanged"
                       Margin="0,0,0,0" />
            <Grid ColumnDefinitions="Auto,Auto,*">
                <Label Text="Sort by" Style="{StaticResource MetaLabel}" VerticalOptions="Center" />
                <Picker x:Name="SortPicker"
                        Grid.Column="1"
                        SelectedIndexChanged="OnSortChanged"
                        HorizontalOptions="Start"
                        WidthRequest="160">
                    <Picker.Items>
                        <x:String>Created</x:String>
                        <x:String>Purchased</x:String>
                    </Picker.Items>
                </Picker>
            </Grid>
        </VerticalStackLayout>

        <Border x:Name="EmptyStateView"
                Grid.Row="1"
                Style="{StaticResource CardBorder}"
                BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Black}}"
                StrokeThickness="0"
                Padding="24"
                IsVisible="False">
            <VerticalStackLayout Spacing="6"
                                 HorizontalOptions="Center"
                                 VerticalOptions="Center">
                <Label Text="No lists yet"
                       Style="{StaticResource TitleLabel}"
                       HorizontalTextAlignment="Center" />
                <Label Text="Create your first shopping list from the toolbar."
                       Style="{StaticResource MetaLabel}"
                       HorizontalTextAlignment="Center" />
            </VerticalStackLayout>
        </Border>

        <CollectionView x:Name="ListsView"
                        Grid.Row="1"
                        SelectionMode="None"
                        IsVisible="True">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border Style="{StaticResource CardBorder}"
                            BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Black}}"
                            StrokeThickness="0"
                            Margin="0,8,0,0"
                            Padding="12"
                            BindingContext="{Binding .}">
                        <VerticalStackLayout Spacing="8">
                            <Label Text="{Binding DisplayDate}"
                                   Style="{StaticResource MetaLabel}" />
                            <VerticalStackLayout Spacing="0"
                                                 BindableLayout.ItemsSource="{Binding Items}">
                                <BindableLayout.ItemTemplate>
                                    <DataTemplate>
                                        <Grid RowDefinitions="Auto,1" Padding="0,8">
                                            <Grid ColumnDefinitions="*,Auto" ColumnSpacing="12"
                                                  BindingContext="{Binding .}">
                                                <VerticalStackLayout Spacing="2">
                                                    <Label Text="{Binding Name}" Style="{StaticResource TitleLabel}" />
                                                    <HorizontalStackLayout Spacing="8">
                                                        <Border Style="{StaticResource Chip}">
                                                            <Label Text="{Binding ItemCount, StringFormat='\{0\} items'}"
                                                                   Style="{StaticResource MetaLabel}" />
                                                        </Border>
                                                    </HorizontalStackLayout>
                                                </VerticalStackLayout>

                                                <Label Grid.Column="1"
                                                       Text="{Binding TotalCost, StringFormat='${0:0.00}'}"
                                                       Style="{StaticResource PriceLabel}"
                                                       VerticalOptions="Center" />
                                            </Grid>

                                            <BoxView Grid.Row="1"
                                                     HeightRequest="1"
                                                     HorizontalOptions="Fill"
                                                     BackgroundColor="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray600}}" />

                                            <Grid.GestureRecognizers>
                                                <TapGestureRecognizer
                                                    NumberOfTapsRequired="1"
                                                    Tapped="OnCardTapped"
                                                    CommandParameter="{Binding .}" />
                                            </Grid.GestureRecognizers>
                                            <Grid.Behaviors>
                                                <toolkit:TouchBehavior
                                                    LongPressCommand="{Binding Source={x:Reference ListsPageRoot}, Path=LongPressCommand}"
                                                    LongPressCommandParameter="{Binding .}" />
                                            </Grid.Behaviors>
                                        </Grid>
                                    </DataTemplate>
                                </BindableLayout.ItemTemplate>
                            </VerticalStackLayout>
                        </VerticalStackLayout>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Border Grid.Row="2"
                Style="{StaticResource CardBorder}"
                BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Black}}"
                StrokeThickness="0"
                Padding="12"
                Margin="0,8,0,0">
            <Grid ColumnDefinitions="*,Auto" ColumnSpacing="12" VerticalOptions="Center">
                <Label Text="{Binding AllTotalCaptionText}" Style="{StaticResource MetaLabel}" VerticalOptions="Center" VerticalTextAlignment="Center"/>
                <Label Grid.Column="1" Text="{Binding AllTotalValueText}" Style="{StaticResource PriceLabel}" VerticalOptions="Center" VerticalTextAlignment="Center" HorizontalOptions="End"/>
            </Grid>
        </Border>
    </Grid>
</ContentPage>
